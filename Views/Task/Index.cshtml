@model Sitecore.Education.TodoManager.Models.Task
@using Sitecore.Mvc.Extensions
<div class="card mt-4">
    <img class="card-img-top img-fluid" src="http://placehold.it/900x400" alt="">
    <div class="card-body">
        <h3 class="card-title">@Model.Description</h3>
        @using(Html.EditFrame(RenderingContext.Current.ContextItem.ID.ToString(), "ToDo Manager", "Task Category", "Edit Task Category", null, null))
        {
            <h4>Category: @Model.Category</h4>
        }
        <h5>Due date: @Model.DueDate</h5>
        <p class="card-text">@Model.Details</p>

        @using(Html.EditFrame(RenderingContext.Current.ContextItem.ID.ToString(), "ToDo Manager", "Task Status", "Edit Task Status", null, null))
        {
            <span class="text-warning">@Model.Status</span>
        }
    </div>
</div>

